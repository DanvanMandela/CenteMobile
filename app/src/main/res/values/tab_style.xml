<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.App.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TabLayout</item>
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
    </style>

    <style name="ThemeOverlay.App.TabLayout" parent="">
        <item name="colorPrimary">@color/app_blue_light</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/dar_color_one</item>
    </style>

    <style name="customTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
    </style>

    <style name="TabTextAppearance" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/poppins_medium</item>
    </style>
</resources>