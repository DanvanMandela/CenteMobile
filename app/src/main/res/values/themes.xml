<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CenteMobile" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/app_blue_light</item>
        <item name="colorPrimaryVariant">@color/app_blue_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/app_blue_light</item>
        <item name="colorSecondaryVariant">@color/app_blue_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="backgroundColor">@color/ghost_white</item>

    </style>


    <style name="ScanActivity" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:navigationBarColor">@color/transparent</item>
    </style>

    <style name="CropActivity" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor">@color/transparent</item>
    </style>
    <style name="Theme.CenteMobile.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.CenteMobile.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.CenteMobile.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>