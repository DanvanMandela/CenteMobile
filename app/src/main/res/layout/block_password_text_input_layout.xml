<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="storage"
            type="com.elmacentemobile.data.source.pref.StorageDataSource" />

        <variable
            name="data"
            type="com.elmacentemobile.data.model.control.FormControl" />

        <variable
            name="callback"
            type="com.elmacentemobile.util.callbacks.AppCallbacks" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/parent"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_64dp"
            android:layout_marginHorizontal="@dimen/dimens_24dp"
            android:layout_marginTop="@dimen/dimens_16dp"
            android:hint="@{data.controlText}"
            app:boxBackgroundColor="@color/ghost_white"
            app:hintTextAppearance="@style/TextAppearance.MaterialComponents.Caption"
            app:passwordToggleEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/child"
                callback="@{callback}"
                password="@{data}"
                setTag="@{data.controlID}"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/poppins_medium"
                android:imeOptions="actionDone"
                android:inputType="numberPassword"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                tools:ignore="SpeakableTextPresentCheck" />

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>


</layout>