<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="value"
            type="String" />

        <variable
            name="storage"
            type="com.elmacentemobile.data.source.pref.StorageDataSource" />

        <variable
            name="data"
            type="com.elmacentemobile.data.model.control.FormControl" />

        <variable
            name="callback"
            type="com.elmacentemobile.util.callbacks.AppCallbacks" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimens_24dp"
            android:layout_marginBottom="@dimen/dimens_8dp"
            android:fontFamily="@font/poppins_medium"
            android:text="@{data.controlText}"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Caption" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/outlinedTextField"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_54dp"
            android:layout_marginHorizontal="@dimen/dimens_24dp"
            android:hint="@{data.controlText}"
            app:boxBackgroundColor="@color/back_blue"
            app:boxCornerRadiusBottomEnd="@dimen/dimens_8dp"
            app:boxCornerRadiusBottomStart="@dimen/dimens_8dp"
            app:boxCornerRadiusTopEnd="@dimen/dimens_8dp"
            app:boxCornerRadiusTopStart="@dimen/dimens_8dp"
            app:boxStrokeColor="@color/back_blue"
            app:endIconTint="@color/app_blue_dark"
            app:hintEnabled="false"
            app:hintTextAppearance="@style/TextAppearance.MaterialComponents.Caption"
            app:hintTextColor="@color/dar_color_two"
            app:prefixTextAppearance="@style/TextAppearance.MaterialComponents.Body2">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/child"
                callback="@{callback}"
                form="@{data}"
                setTag="@{data.controlID}"
                storage="@{storage}"
                value="@{value}"
                android:hint="@string/enter_"
                android:textColorHint="@color/app_blue_light"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/poppins_semi_bold"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                android:textColor="@color/app_blue_dark"
                tools:ignore="SpeakableTextPresentCheck" />

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

</layout>