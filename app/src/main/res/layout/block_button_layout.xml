<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="module"
            type="com.elmacentemobile.data.model.module.Modules" />

        <variable
            name="data"
            type="com.elmacentemobile.data.model.control.FormControl" />

        <variable
            name="callback"
            type="com.elmacentemobile.util.callbacks.AppCallbacks" />
    </data>

    <com.google.android.material.button.MaterialButton
        style="@style/Widget.MaterialComponents.Button"
        callback="@{callback}"
        form="@{data}"
        module="@{module}"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_54dp"
        android:layout_marginHorizontal="@dimen/dimens_24dp"
        android:layout_marginTop="@dimen/dimens_24dp"
        android:layout_marginBottom="@dimen/dimens_8dp"
        app:boxCornerRadiusBottomEnd="@dimen/dimens_8dp"
        app:boxCornerRadiusBottomStart="@dimen/dimens_8dp"
        app:boxCornerRadiusTopEnd="@dimen/dimens_8dp"
        app:boxCornerRadiusTopStart="@dimen/dimens_8dp"
        android:fontFamily="@font/poppins_medium"
        android:inputType="textCapSentences"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
        tools:ignore="SpeakableTextPresentCheck"
        tools:text="click me" />

</layout>