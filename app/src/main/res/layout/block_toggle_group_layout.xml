<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="data"
            type="com.elmacentemobile.view.ep.data.GroupForm" />


        <variable
            name="callback"
            type="com.elmacentemobile.util.callbacks.AppCallbacks" />
    </data>

    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/parent"
        callback="@{callback}"
        form="@{data}"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_60dp"
        android:layout_marginHorizontal="@dimen/dimens_24dp"
        android:layout_marginVertical="@dimen/dimens_8dp"
        android:orientation="horizontal"
        app:selectionRequired="true"
        app:singleSelection="true" />


</layout>