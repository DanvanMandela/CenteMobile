<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="value"
            type="String" />

        <variable
            name="storage"
            type="com.elmacentemobile.data.source.pref.StorageDataSource" />

        <variable
            name="data"
            type="com.elmacentemobile.data.model.control.FormControl" />

        <variable
            name="callback"
            type="com.elmacentemobile.util.callbacks.AppCallbacks" />

    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/dimens_8dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimens_24dp"
            android:layout_marginBottom="@dimen/dimens_4dp"
            android:fontFamily="@font/poppins_medium"
            android:text="@{data.controlText}"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Caption" />


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_54dp"
            android:layout_marginHorizontal="@dimen/dimens_24dp"
            tools:ignore="UselessParent">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/parent"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginTop="@dimen/dimens_4dp"
                android:hint="@{data.controlText}"
                app:boxBackgroundColor="@color/back_blue"
                app:boxCornerRadiusBottomEnd="@dimen/dimens_8dp"
                app:boxCornerRadiusBottomStart="@dimen/dimens_8dp"
                app:boxCornerRadiusTopEnd="@dimen/dimens_8dp"
                app:boxCornerRadiusTopStart="@dimen/dimens_8dp"
                app:hintEnabled="false"
                app:hintTextAppearance="@style/TextAppearance.MaterialComponents.Caption"
                app:hintTextColor="@color/dar_color_two"
                app:prefixText="@string/ugx"
                app:prefixTextAppearance="@style/TextAppearance.MaterialComponents.Body2">

                <com.elmacentemobile.util.custom.CurrencyInput
                    android:id="@+id/child"
                    amount="@{data}"
                    callback="@{callback}"
                    setTag="@{data.controlID}"
                    value="@{value}"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/poppins_medium"
                    android:imeOptions="actionDone"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                    app:localeTag="en-NG"
                    app:maxNumberOfDecimalDigits="2"
                    tools:ignore="SpeakableTextPresentCheck" />
            </com.google.android.material.textfield.TextInputLayout>

        </FrameLayout>
    </LinearLayout>


</layout>