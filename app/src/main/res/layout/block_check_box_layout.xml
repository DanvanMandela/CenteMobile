<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="module"
            type="com.elmacentemobile.data.model.module.Modules" />

        <variable
            name="data"
            type="com.elmacentemobile.data.model.control.FormControl" />

        <variable
            name="callback"
            type="com.elmacentemobile.util.callbacks.AppCallbacks" />
    </data>

    <CheckBox
        callback="@{callback}"
        data="@{data}"
        modules="@{module}"
        setTag="@{data.controlID}"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimens_24dp"
        android:layout_marginTop="@dimen/dimens_16dp"
        android:text="@{data.controlText}"
        tools:ignore="ObsoleteLayoutParam" />
</layout>