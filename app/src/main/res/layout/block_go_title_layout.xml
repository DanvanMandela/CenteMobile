<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/dimens_8dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimens_24dp"
            android:layout_marginBottom="@dimen/dimens_4dp"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/title_"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Caption" />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/autoInput"
            style="@style/CustomAutoTextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimens_24dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            app:hintEnabled="false"
            app:hintTextAppearance="@style/TextAppearance.MaterialComponents.Caption">

            <AutoCompleteTextView
                android:id="@+id/autoEdit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimens_54dp"
                android:focusable="false"
                android:fontFamily="@font/poppins_medium"
                android:hint="@string/title"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                android:textColor="@color/app_blue_dark"
                android:textColorHint="@color/app_blue_dark_light"
                tools:ignore="LabelFor" />

        </com.google.android.material.textfield.TextInputLayout>


    </LinearLayout>
</layout>