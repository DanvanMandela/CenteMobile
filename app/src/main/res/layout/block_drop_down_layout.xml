<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <data>

        <variable
            name="module"
            type="com.elmacentemobile.data.model.module.Modules" />


        <variable
            name="storage"
            type="com.elmacentemobile.data.source.pref.StorageDataSource" />

        <variable
            name="data"
            type="com.elmacentemobile.data.model.control.FormControl" />

        <variable
            name="callback"
            type="com.elmacentemobile.util.callbacks.AppCallbacks" />
    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/dimens_8dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimens_24dp"
            android:layout_marginBottom="@dimen/dimens_4dp"
            android:fontFamily="@font/poppins_medium"
            android:text="@{data.controlText}"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Caption" />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/autoInput"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimens_24dp"
            android:hint="@{data.controlText}"
            android:layout_marginTop="@dimen/dimens_4dp"
            app:boxBackgroundColor="@color/back_blue"
            app:boxCornerRadiusBottomEnd="@dimen/dimens_8dp"
            app:boxCornerRadiusBottomStart="@dimen/dimens_8dp"
            app:boxCornerRadiusTopEnd="@dimen/dimens_8dp"
            app:boxCornerRadiusTopStart="@dimen/dimens_8dp"
            app:hintEnabled="false"
            app:hintTextAppearance="@style/TextAppearance.MaterialComponents.Caption"
            app:hintTextColor="@color/dar_color_two">

            <AutoCompleteTextView
                android:id="@+id/autoEdit"
                callback="@{callback}"
                form="@{data}"
                module="@{module}"
                setTag="@{data.controlID}"
                storage="@{storage}"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimens_54dp"
                android:focusable="false"
                android:fontFamily="@font/poppins_medium"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                android:textColor="@color/app_blue_dark"
                tools:ignore="LabelFor" />

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

</layout>