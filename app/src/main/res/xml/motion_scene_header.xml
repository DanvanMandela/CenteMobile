<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <!--    Account to utils-->
    <Transition
        motion:constraintSetEnd="@id/utilsState"
        motion:constraintSetStart="@id/accountState"
        motion:duration="700" />

    <!--    Utils to account-->
    <Transition
        motion:constraintSetEnd="@id/accountState"
        motion:constraintSetStart="@id/utilsState"
        motion:duration="700" />


    <ConstraintSet android:id="@+id/accountState">
        <Constraint android:id="@+id/accountPager">
            <Transform
                android:rotationY="0"
                android:translationY="0dp" />
        </Constraint>
        <Constraint android:id="@+id/utilPager">
            <Transform
                android:rotationY="-15"
                android:translationY="-250dp" />
        </Constraint>
    </ConstraintSet>


    <ConstraintSet android:id="@+id/utilsState">
        <Constraint
            android:id="@id/accountPager"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent">
            <Transform
                android:rotationX="-15"
                android:translationY="250dp" />
        </Constraint>

        <Constraint android:id="@id/utilPager">
            <Transform
                android:rotationX="0"
                android:translationY="0dp" />
        </Constraint>
    </ConstraintSet>

</MotionScene>